# ---------------------------------------------------------------------
# CONFIGURATION
GENAST=../scripts/gen_ast.py

RAW_SRC=$(wildcard *.txt)
AST_SRC=$(patsubst %.txt, %.toml, $(RAW_SRC))
# ---------------------------------------------------------------------

# ---------------------------------------------------------------------
# TARGETS
.PHONY: clean

all: $(AST_SRC)
# ---------------------------------------------------------------------


# ---------------------------------------------------------------------
# COMPILATION
%.toml: %.txt
	$(PYGEN) $(GENAST) $< $@
# ---------------------------------------------------------------------


# ---------------------------------------------------------------------
# OTHERS
clean:
	rm -f *.toml
	rm -f *.mantxt
	rm -f *.tex
# ---------------------------------------------------------------------

