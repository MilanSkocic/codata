PNG_FOLDER=png
BUILD_FOLDER=build
SRC_FOLDER=src

TEX=pdflatex
TEX_OPTIONS=-output-directory=$(BUILD_FOLDER) -interaction=batchmode

CONVERT=magick convert
CONVERT_DENSITY=-density 300
CONVERT_RESIZE=

TEX_SRC=$(wildcard $(SRC_FOLDER)/*.tex)
OUTPUTS=$(patsubst $(SRC_FOLDER)/%.tex, $(PNG_FOLDER)/%.png, $(TEX_SRC))
